@model RMS.Models.User

@{
    ViewBag.Title = "Details";
}


<style>

    .form-control {
        width: 300px;
    }
</style>



<center><h2 style="margin-top:20px;">User Details </h2></center>
<center>
    <div>



        <hr />



        <img src="/Images/avatar.png"  style="border-radius:50%; resize:block; width:50px; height:50px;"/>

        <dl class="dl-horizontal">
            <dt>
                Name
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>


            <dt>
                Email Address
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                Status
            </dt>

            <dd style="width:120px">

                @Html.DisplayFor(model => model.IsActive)


            </dd>


            <dt>
            Role
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Role.Name)
            </dd>



           



        </dl>
    </div>
    <p>

        <div class="col-md-offset-2 col-md-10" style="margin-top:20px;">
            <a href="/Users/Edit/@Model.Id"> <input type="button" value="Edit" class="btn btn-default" /></a>
            <a href="/Users/Index"> <input type="button" value="Back to the List" class="btn btn-default" /></a>
        </div>

       </p>
</center>